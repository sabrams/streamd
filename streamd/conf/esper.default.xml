<esper-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xmlns="http://www.espertech.com/schema/esper"
                     xsi:schemaLocation="http://www.espertech.com/schema/esper http://www.espertech.com/schema/esper/esper-configuration-4.0.xsd">
    <engine-settings>
        <defaults>
            <threading>
                <listener-dispatch preserve-order="true" timeout-msec="1000" locking="spin"/>
                <internal-timer enabled="true" msec-resolution="200"/>
                <threadpool-inbound enabled="true" num-threads="4"/>
                <threadpool-outbound enabled="true" num-threads="4" capacity="1000"/>
                <threadpool-timerexec enabled="true" num-threads="4"/>
                <threadpool-routeexec enabled="true" num-threads="4"/>
            </threading>
        </defaults>
    </engine-settings>
</esper-configuration>
